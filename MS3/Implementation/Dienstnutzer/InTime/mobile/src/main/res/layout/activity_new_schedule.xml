<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/newSchedule_appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="0dp"
        android:background="@drawable/addingactivityheaderbar"
        android:fitsSystemWindows="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/newSchedule_OptionsBtn"
                android:layout_width="35dp"
                android:layout_height="33.87dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/optionsbtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/newSchedule_HeaderLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:text="New Schedule"
                android:textAlignment="center"
                android:textColor="#F5F5F5"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/newSchedule_BackBtn"
                android:layout_width="20dp"
                android:layout_height="32dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/left_arrow_key"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.stefangeier.intime.newSchedule">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/schedules_scheduleBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="0dp"
                android:background="@drawable/newscheduleschedulebar"
                android:fitsSystemWindows="true">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/newSchedule_nextScheduleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_vertical"
                        android:text='"Next Schedule"'
                        android:textColor="#F5F5F5"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/newSchedule_nextScheduleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_vertical"
                        android:text="Min : Sec"
                        android:textAlignment="center"
                        android:textColor="#F5F5F5"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </android.support.constraint.ConstraintLayout>

            </android.support.design.widget.AppBarLayout>

            <EditText
                android:id="@+id/newSchedule_initialLocationEditText"
                android:layout_width="262dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/newscheduleinitiallocationedittext"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:textColor="#AAAAAA"
                android:hint="Enter here"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newSchedule_initialLocationLabel" />

            <TextView
                android:id="@+id/newSchedule_scheduleNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto"
                android:text="Schedule name"
                android:textColor="#2783CA"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/schedules_scheduleBar" />

            <TextView
                android:id="@+id/newSchedule_initialLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:text="Initial location"
                android:textColor="#2783CA"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newSchedule_scheduleNameEditText" />

            <TextView
                android:id="@+id/newSchedule_FinalTargetLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:text="Final target location"
                android:textColor="#2783CA"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newSchedule_initialLocationEditText" />

            <EditText
                android:id="@+id/newSchedule_FinalTargetLocationEditText"
                android:layout_width="262dp"
                android:layout_height="42dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:alpha="20"
                android:background="@drawable/newschedulefinaltargetlocationedittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Enter here"
                android:textColor="#AAAAAA"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newSchedule_FinalTargetLocationLabel" />

            <TextView
                android:id="@+id/newSchedule_timeOfArrivalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:text="Time of arrival"
                android:textColor="#2783CA"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newSchedule_FinalTargetLocationEditText" />

            <Button
                android:id="@+id/newSchedule_timeOfArrivalBtn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/newschedulescreensettimebtn"
                android:text="Set time"
                android:textColor="#489DDE"
                android:onClick="showTimePickerDialog"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newSchedule_timeOfArrivalLabel" />

            <Button
                android:id="@+id/newSchedule_finalTargetLocationSetBtn"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/newschedulefinaltargetlocationbtn"
                android:onClick="setFinalTargetLocation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/newSchedule_FinalTargetLocationEditText"
                app:layout_constraintTop_toTopOf="@+id/newSchedule_FinalTargetLocationEditText" />

            <Button
                android:id="@+id/newSchedule_initialLocationTrackerBtn"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/newscheduleinitiallocationbtn"
                android:onClick="locatePosition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/newSchedule_initialLocationEditText"
                app:layout_constraintTop_toTopOf="@+id/newSchedule_initialLocationEditText" />

            <EditText
                android:id="@+id/newSchedule_scheduleNameEditText"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/newscheduleschedulenameedittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Enter here"
                android:textColor="#AAAAAA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newSchedule_scheduleNameLabel" />

            <Button
                android:id="@+id/newSchedule_nextBtn"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/newschedulenextbtn"
                android:onClick="enterNewScheduleActivityScreen"
                android:text="Next"
                android:textColor="#F5F5F5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newSchedule_timeOfArrivalBtn" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="566dp">

        <ImageView
            android:id="@+id/newSchedule_shade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="shade"
            android:scaleType="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/addingacitivtycalculatingshade" />

        <TimePicker
            android:id="@+id/newSchedule_timePicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="#FAFAFA"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
